<div class="container-fluid">
  <div class="row">
    <div class="col-5 d-flex flex-column border border-dark mt-3">
      <img
        alt="Bootstrap Image Preview"
        src="https://www.kindpng.com/picc/m/285-2855863_a-festival-celebrating-tractors-round-profile-picture-placeholder.png"
        class="rounded-circle align-self-center mt-5 w-50 h-50"
      />
      <h3 class="align-self-center m-2">
        {{dataUser.first_name}} {{dataUser.last_name}}
      </h3>
      <small class="align-self-center"> @{{dataUser.username}} </small>
      <div class=" align-self-center m-2" cols="50" id="user-bio">
        {{dataUser.bio}}
      </div>
      <button
        type="button"
        class="btn btn-sm align-self-center btn-secondary m-2"
        id='edit-button'
      >
        Edit Profile
      </button>
    </div>
    <div class="col-7 border border-dark mt-3">
      <h2 class=" ml-4">My Posts ...</h2>
      {{#each posts as |post|}}
        <p class="rounded border border-secondary p-2">
          {{post_content}}
        </p>
      {{/each}}
    </div>
  </div>
  <div id="myModal" class="modal m2">
    <div class='modal-content'>
      <span class='close'>&times;</span>
      <p class=" align-self-center m-2">Enter your new bio</p>
      <textarea class=" align-self-center m-2" cols="50" id="user-bio">
      </textarea>
      <button
        type="button"
        class="btn btn-sm align-self-center btn-secondary m-2"
        id='save-button'
      >
        Save
      </button>
    </div>
  </div>
</div>

<script src='/js/saveprofile.js'></script>

