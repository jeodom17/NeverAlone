{{!-- Shows Random Quotes --}}
<div class="d-flex justify-content-between">
  <div class="mt-3 px-4 text-center" style="width: 30rem;">
    <div>
      <h4>Quote of the Day... </h4>
      <p class="border border-dark bg-light rounded text-wrap font-italic" style="height: 3rem;">{{randomQuote.quote}}</p>
    </div>

    {{!-- Create a post --}}
    <form>
      <div class="form-group">
        <label for="new-post"></label>
        <textarea id="new-post" placeholder="How are you feeling?" class="form-control text-center" rows="5" name="userPost"></textarea>
        <button type="submit" id="new-post-btn" class="btn btn-dark mt-3">Post</button>
      </div>
    </form>
  </div>


{{!-- Shows each posts on homepage --}}
<div id="post-wrapper" class="col" class="homepagePosts" style="height: 50em; overflow-y: scroll;">

  {{#each posts as |post|}}    
  <div class="container-fluid my-2 bg-dark">
      <div class="row">
        <div class="col-12">
          <div class="card text-center bg-dark text-light">
            <h6 class="card-text bg-dark">Post by {{User.username}}<br> on {{format_date createdAt}} at {{format_time createdAt}}</h6>
            <div class="card-body bg-dark">
              <p class="card-text rounded">{{content}}</p>
              <form class="comment-form bg-dark" data-id={{id}}>
                
                {{#each post.Comments as |comment|}}
        <div class="container-fluid my-2">
          <div class="row">
            <div class="col-12 bg-dark">
            <div class="card text-center bg-dark">
            <h6 class="card-text bg-dark">Comment by {{User.username}}<br> on {{format_date createdAt}} at {{format_time createdAt}}</h6>
            <div class="card-body">
              <p class="">{{body}}</p>
            </div>
          </div>
          </div>
          </div>
        </div>
        
        {{/each}}
              <div class="d-flex justify-content-center bg-dark">
                 <input class="comment-input align-self-center bg-light" data-postid={{id}} placeholder="Add helpful comment"  />
                <button type="submit" class="btn btn-light btn-sm m-2 new-comment-btn align-self-center" data-toggle="modal" data-target="#comment-modal">
                 Add Comment</button>
              </div>
             </form>
            </div>
          </div>
        </div>
        
      </div>
    </div>

  {{/each}}

{{!-- closing tag for post-wrapper --}}
</div>

