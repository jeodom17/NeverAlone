
<div class="d-flex justify-content-between">
  <div class="mt-3">
      <div class="px-2">
        <h4>Quote of the Day... </h4>
        <p id="quote" class="border border-dark rounded p-2">{{randomQuote.quote}}</p>

      </div>
    <div>
      <form role="form">
        <div class="form-group">
          <label for="userPost"> Make a Post </label>
          <textarea id="userPost" class="form-control" rows="5" name="userPost"></textarea>
          <button type="submit" id="new-post-btn" class="btn btn-dark mt-2">Post</button>
        </div>

    {{!-- Create a post --}}
    <form class="text-center">
      <div class="form-group">
        <label for="new-post"> Create a Post </label>
        <textarea id="new-post" placeholder="How are you feeling?" class="form-control text-center" rows="5" name="userPost"></textarea>
        <button type="submit" id="new-post-btn" class="btn btn-dark">Post</button>
      </div>
      </form>
  </div>


  {{!-- Shows each posts on homepage --}}
  <div class="d-flex flex-column"> 
  {{#each posts as |post|}}    
    <div class="post y-3">
      <article class="card">
        <div class="card-header flex-row justify-space-between bg-primary text-light text-center">
          <div>
            Posted by
          </div>
        </div>
        <div class="card-body bg-dark text-light text-center">
          {{content}}
        </div>
      </article>
    </div>  
  {{/each}}
  </div>



    <div class="p-2 mt-3">
      <h4>Recent Friends</h4>
      <ul class="list-unstyled">
        <li class="list-item">{{username}}</li>
        <li class="list-item">{{username}}</li>
        <li class="list-item">{{username}}</li>
        <li class="list-item">{{username}}</li>
        <li class="list-item">{{username}}</li>
        <li class="list-item">{{username}}</li>
        <li class="list-item">{{username}}</li>   
        <li class="list-item">{{username}}</li>
      </ul>
    </div>
  </div>

</div>


<script src="/js/createPost.js"></script>