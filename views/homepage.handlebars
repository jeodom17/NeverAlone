
<div class="d-flex justify-content-between">
  <div class="mt-3">
      <div class="px-2">
        <h4>Quote of the Day... </h4>
        <p id="quote" class="border border-dark rounded p-2">{{randomQuote.quote}}</p>

      </div>
    <div>
      <form role="form">
        <div class="form-group">
          <label for="userPost"> Make a Post </label>
          <textarea id="userPost" class="form-control" rows="5" name="userPost"></textarea>
          <button type="submit" id="new-post-btn" class="btn btn-dark mt-2">Post</button>
        </div>
      </form>
    </div>
  </div>

  <div class=" col-7 mx-1 mt-3">
    {{#each posts as |post|}}
      <form class=" mt-2">
        <h2 class="align-self-center m-2">{{post_username}}</h2>
        <p class="align-self-center m-2">{{post_content}}</p>
        <textarea class="align-self-center rounded m-2" id="userComment" name="userComment" cols="40"></textarea>
        <button class="align-self-center btn bg-dark m-2 text-white" type="submit">Add Comment</button>
      </form>
    {{/each}}
  </div>

  <div class="p-2 mt-3">
    <h4>Recent Friends</h4>
    <ul class="list-unstyled">
      <li class="list-item">{{username}}</li>
      <li class="list-item">{{username}}</li>
      <li class="list-item">{{username}}</li>
      <li class="list-item">{{username}}</li>
      <li class="list-item">{{username}}</li>
      <li class="list-item">{{username}}</li>
      <li class="list-item">{{username}}</li>   
      <li class="list-item">{{username}}</li>
    </ul>
  </div>
</div>

<script src="/js/createPost.js"></script>